<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@color/black_alpha_176"/>

    <EditText
        android:id="@+id/et_desc"
        android:gravity="start"
        android:layout_marginTop="@dimen/len_100"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/len_10"
        android:layout_marginRight="@dimen/len_10"
        android:padding="@dimen/len_10"
        android:hint="书籍名称，版本,新旧程度,交易，联系方式..."
        android:background="@drawable/goods_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_116"
        />

    <ImageButton
        android:layout_marginTop="@dimen/len_10"
        android:scaleType="fitXY"
        android:id="@+id/btn_add_image"
        android:background="@drawable/ic_add_black_24dp"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/len_10"
        android:background="@color/background_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/len_10"
        android:orientation="horizontal">
        <TextView
            android:drawableLeft="@drawable/price"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="价格"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <EditText
            android:id="@+id/et_price"
            android:layout_weight="1"
            android:hint="开个价"
            android:padding="@dimen/len_10"
            android:background="@drawable/goods_style"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="@dimen/len_10"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="卖给平台" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我自己卖" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_release"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/len_48"
        android:layout_gravity="center_horizontal"
        android:drawableTop="@drawable/button_buy_selector"
        android:text="申请交易" />


</LinearLayout>