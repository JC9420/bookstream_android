<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/grey_200"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_82"
        android:paddingTop="@dimen/state_height"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cv_back"
            android:src="@drawable/ic_arrow_back_40dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_marginStart="9dp"
            android:layout_marginTop="@dimen/len_6"
            android:layout_marginBottom="@dimen/len_6"
            android:layout_width="0dp"
            android:layout_height="@dimen/toolbarHeight"
            android:layout_weight="1"
            android:paddingTop="@dimen/len_4"
            android:paddingBottom="@dimen/len_4"
            android:orientation="horizontal"
            android:gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_gravity="center">


            <EditText
                android:id="@+id/edit_serach"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/font_16"
                android:hint="@string/search_hint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/searchview"/>

        </LinearLayout>


        <ImageView
            android:layout_marginStart="@dimen/len_10"
            android:layout_marginEnd="@dimen/len_10"
            android:layout_gravity="center"
            android:src="@drawable/ic_search"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_buy_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>


</LinearLayout>