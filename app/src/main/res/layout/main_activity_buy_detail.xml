<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_300">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/state_height">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_256"
            android:background="@color/white">
            <ImageView
                android:id="@+id/iv_show_book"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_40dp"
                android:layout_margin="@dimen/len_10"
                android:layout_marginBottom="@dimen/len_10"/>
        </FrameLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/len_4"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_116"
            android:paddingLeft="@dimen/len_4"
            android:layout_weight="4"
            android:paddingStart="@dimen/len_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_book_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:textSize="@dimen/font_20"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="书籍名称"
                android:textColor="@color/black_alpha_192"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_book_from"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_14"
                    android:text="出版社名称"/>

                <TextView
                    android:id="@+id/tv_book_order"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_14"
                    android:text="6版"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_18"
                    android:layout_gravity="center_horizontal"
                    android:text="￥" />
                <TextView
                    android:id="@+id/tv_book_price"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_18"
                    android:layout_marginLeft="@dimen/len_4"
                    android:text="18.8"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_book_along"
                        android:layout_width="@dimen/len_40"
                        android:layout_height="@dimen/len_24"
                        android:layout_gravity="center"
                        android:textColor="@color/green_200"
                        android:text="归属"
                        android:background="@drawable/bg_text_along"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/len_10"
            android:paddingTop="@dimen/len_10"
            android:background="@color/white"
            android:layout_marginTop="@dimen/len_4"
            android:paddingStart="@dimen/len_10"
            android:textColor="@color/black"
            android:textSize="@dimen/font_20"
            android:text="书籍详情"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_256"
            android:background="@color/white"
            android:layout_margin="@dimen/len_4"
            android:padding="@dimen/len_6"
            android:textSize="@dimen/font_16"
            android:text="基本信息
平装\n
商品尺寸: 27 x 19.6 x 3.6 cm\n
商品重量: 980 g\n
品牌: 科学出版社\n
ASIN: B073LBYQ13\n
目录\n
1.-----------\n
2.------------\n
3.------------\n
"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/len_10">

            <ImageView
                android:layout_width="@dimen/len_30"
                android:layout_height="@dimen/len_30"
                android:layout_gravity="center"
                android:src="@drawable/ic_error_outline_black_24dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/len_4"
                android:text="平台所支持的私对私交易需要收取一定的信息管理费!"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/len_48"
            android:layout_marginBottom="@dimen/len_48"
            android:background="@drawable/button_buy_selector"/>


    </LinearLayout>

</ScrollView>