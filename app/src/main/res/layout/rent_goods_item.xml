<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/len_116"
    android:padding="@dimen/len_8"
    android:layout_marginLeft="@dimen/len_4"
    android:layout_marginRight="@dimen/len_4"
    android:layout_marginTop="@dimen/len_4"
    android:layout_marginBottom="@dimen/len_4"
    android:orientation="horizontal"
    android:background="@drawable/goods_style">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_show_book"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/len_4"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_book_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:textSize="@dimen/font_20"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="书籍名称"
                android:textColor="@color/black_alpha_192"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_book_from"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_14"
                    android:text="出版社名称"/>

                <TextView
                    android:id="@+id/tv_book_order"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_14"
                    android:text="6版"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_18"
                    android:layout_gravity="center_horizontal"
                    android:text="￥" />
                <TextView
                    android:id="@+id/tv_book_price"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_18"
                    android:layout_marginLeft="@dimen/len_4"
                    android:text="18.8"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_book_rent"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/len_24"
                        android:layout_gravity="center"
                        android:textColor="@color/green_200"
                        android:text="我想租"
                        android:background="@drawable/button_background_selector"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

