<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/timg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/len_82"
    android:paddingTop="@dimen/state_height"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cv_portrait"
        android:src="@drawable/head"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"
        android:layout_width="30dp"
        android:layout_height="30dp" />

        <LinearLayout
            android:id="@+id/search"
            android:layout_marginStart="9dp"
            android:layout_marginTop="@dimen/len_6"
            android:layout_marginBottom="@dimen/len_6"
            android:layout_width="0dp"
            android:layout_height="@dimen/toolbarHeight"
            android:layout_weight="1"
            android:paddingTop="@dimen/len_4"
            android:paddingBottom="@dimen/len_4"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/searchview">

                <ImageView
                    android:padding="4dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_search"
                    android:layout_width="40dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_serach"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/search_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
        </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginStart="@dimen/len_10"
        android:layout_marginEnd="@dimen/len_10"
        android:layout_gravity="center"
        android:src="@drawable/qcode_24dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />

</LinearLayout>
