<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.workpath.bookstreamapp.MainActivity"
    android:background="@color/hint_color">

    <FrameLayout
        android:layout_marginBottom="@dimen/len_48"
        android:id="@+id/lay_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>


    <LinearLayout
        android:paddingTop="4dp"

        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
            android:layout_gravity="bottom"
            app:menu="@menu/btnv_menu_with_view_pager"
            android:elevation="@dimen/len_24"
            android:translationZ="@dimen/len_24"
            app:itemIconTint="@color/btnv_fault"
            app:itemTextColor="@color/btnv_fault"
            android:id="@+id/btnv"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white">

        </com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx>
    </LinearLayout>

</RelativeLayout>



